{
  "version": 8,
  "configurePresets": [
    {
      "name": ".base",
      "hidden": true,
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RELEASE",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_C_COMPILER_LAUNCHER": "ccache",
        "CMAKE_CXX_FLAGS": "",
        "GTEST_IN_MIRCO": "ON"
      }
    },
    {
      "name": "docker_container",
      "displayName": "Release build for CI/CD testing in a docker container",
      "inherits": [
        ".base"
      ],
      "cacheVariables": {
        "USE_KOKKOS_CODE": "OFF",
        "TRILINOS_PATH": "/opt/mirco-dependencies/trilinos_install"
      }
    },
    {
      "name": "docker_container_kokkos",
      "displayName": "Release build using Kokkos for CI/CD testing in a docker container",
      "inherits": [
        ".base"
      ],
      "cacheVariables": {
        "USE_KOKKOS_CODE": "ON",
        "KOKKOS_PATH": "/opt/mirco-dependencies/kokkos_install",
        "KOKKOS_KERNELS_PATH": "/opt/mirco-dependencies/kokkos-kernels_install",
        "KOKKOS_IN_MIRCO": "ON",
        "KOKKOS_KERNELS_IN_MIRCO": "ON"
      }
    },
    {
      "name": ".imcs_workstation_base",
      "hidden": true,
      "inherits": [
        ".base"
      ],
      "cacheVariables": {
        "USE_KOKKOS_CODE": "OFF",
        "CMAKE_CXX_COMPILER_LAUNCHER": "ccache",
        "CMAKE_CXX_FLAGS": "-msse3",
        "TRILINOS_PATH": "/imcs/public/compsim/lib/2022_2/build/lib/cmake/Trilinos",
        "TRILINOS_IN_MIRCO": "ON"
      }
    },
    {
      "name": "imcs_workstation",
      "displayName": "Release build for an IMCS workstation",
      "inherits": [
        ".imcs_workstation_base"
      ]
    },
    {
      "name": "imcs_workstation_RELWITHDEBINFO",
      "displayName": "Release build with debug information for an IMCS workstation",
      "inherits": [
        ".imcs_workstation_base"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RELWITHDEBINFO"
      }
    },
    {
      "name": "imcs_cluster",
      "inherits": [
        ".imcs_workstation_base"
      ],
      "displayName": "Release build on the IMCS cluster",
      "cacheVariables": {
        "TRILINOS_PATH": "$env{TRILINOS_ROOT}",
        "GTEST_IN_MIRCO": "OFF"
      }
    },
    {
      "name": "imcs_cluster_with_tests",
      "displayName": "Release build on the IMCS cluster with tests enabled",
      "inherits": ".imcs_workstation_base",
      "cacheVariables": {
        "TRILINOS_PATH": "$env{TRILINOS_ROOT}",
        "GTEST_IN_MIRCO": "ON"
      }
    }
  ]
}
